%h4
  = @question.title
%br
= form_for [@question, @answer] do |form|
  = form.collection_radio_buttons :alternative_id, @question.alternatives, :id, :title, include_hidden: false do |element|
    .form-check
      = element.label { element.radio_button + ' ' + element.text }

  - if @previous_question.present?
    = link_to 'Previous', question_path(@previous_question), class: 'btn btn-primary'

  = form.submit 'Next', class: "btn btn-primary"
